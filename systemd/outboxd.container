# An example container systemd unit
# See: https://docs.podman.io/en/latest/markdown/podman-systemd.unit.5.html

[Unit]
Description=A mail queue daemon for msmtp
After=network-online.target
Requires=outboxd.socket
After=outboxd.socket

[Container]
Image=codeberg.org/tautropfli/outboxd
Volume=outboxd-state.volume:/var/lib/outboxd
Volume=/etc/outboxd:/etc/outboxd:ro
Network=host

[Service]
Restart=always

[Install]
WantedBy=default.target
